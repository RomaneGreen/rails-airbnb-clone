
<div id="wrapper">

      <div class="row">
        <div class="col-md-6 col-md-offset-3 col-xs-12">

        <div class="text-center">

        <h3>Share your bed ! Be fun and sexy ! </h3>

        <%= image_tag "/feet.jpg", class: "image-new" %>

        <h3>
        Millions of people already share their beds. <br>
        Make the difference ! </h3>

        </div>

        <div class="text-center form-login">
        <%= simple_form_for @bed do |f| %>
        <%= f.error_notification %>
        <%= f.input :title, placeholder: "Warm bed with silk sheets", :label_html => { :class => "label-css"} %>
        <%= f.input :address, label: "My lovely nest is located at this address", placeholder: "36 avenue du calin" %>
        <%= f.input :zipcode, placeholder: "49867" %>
        <%= f.input :city, placeholder: "Bisouville" %>
        <%= f.input :country, priority: ["France"] %>
        <%= f.input :description, label: "A sexy description for a warm bed", placeholder: "I live in a cosy house in the countryside. I love hugs and spending the night with strangers. My bed has high tech silk sheets and a warm pink blanket. Don't hesitate: Book a night (or more)" %>
        <%= f.input :price, label: "Price per night in â‚¬", placeholder: "48" %>
        <%= f.input :photo, as: :attachinary, label: "Choose a nice picture for your bed" %>

        <h4>Equipments</h4>
        <%= f.input :pillow, as: :boolean, label: "Providing a pillow?" %>
        <%= f.input :breakfast, as: :boolean, label: "Serving breakfast in bed?" %>
        <%= f.input :blanket_type, collection: Bed::BLANKET, label: "What kind of blanket are you providing?" %>
        <%= f.button :submit, "Share your bed", class: "btn btn-danger"%>

        <% end %>
        </div>
      </div>



  </div>
</div>
